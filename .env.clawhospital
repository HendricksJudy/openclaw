# ────────────────────────────────────────────────────────────
# ClawHospital Environment Configuration
# Copy this file to .env and fill in the values.
# ────────────────────────────────────────────────────────────

# ── OpenClaw Gateway ─────────────────────────────────────────
OPENCLAW_GATEWAY_TOKEN=change-me-to-a-secure-token
OPENCLAW_GATEWAY_BIND=lan
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_CONFIG_DIR=./data/config
OPENCLAW_WORKSPACE_DIR=./data/workspace

# ── PostgreSQL ───────────────────────────────────────────────
CLAWHOSPITAL_DB_HOST=localhost
CLAWHOSPITAL_DB_PORT=5432
CLAWHOSPITAL_DB_NAME=clawhospital
CLAWHOSPITAL_DB_USER=clawhospital
CLAWHOSPITAL_DB_PASSWORD=change-me-to-a-secure-password

# ── Redis ────────────────────────────────────────────────────
CLAWHOSPITAL_REDIS_URL=redis://localhost:6379
CLAWHOSPITAL_REDIS_PORT=6379

# ── MinIO (S3-compatible storage) ────────────────────────────
CLAWHOSPITAL_MINIO_USER=clawhospital
CLAWHOSPITAL_MINIO_PASSWORD=change-me-minio-secret
CLAWHOSPITAL_MINIO_PORT=9000
CLAWHOSPITAL_MINIO_CONSOLE_PORT=9001
CLAWHOSPITAL_S3_ENDPOINT=http://localhost:9000
CLAWHOSPITAL_S3_ACCESS_KEY=clawhospital
CLAWHOSPITAL_S3_SECRET_KEY=change-me-minio-secret
CLAWHOSPITAL_S3_BUCKET=clawhospital

# ── JWT Authentication ───────────────────────────────────────
CLAWHOSPITAL_JWT_SECRET=change-me-to-a-64-char-random-secret

# ── AI Model Provider (inherited from OpenClaw) ─────────────
